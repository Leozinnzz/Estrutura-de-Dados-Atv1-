{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C (MinGW)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila o programa C usando MinGW"
        },
        {
            "label": "Rodar programa",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": "test",
            "problemMatcher": [],
            "detail": "Executa o programa compilado"
        },
        {
            "label": "Compilar e Rodar",
            "dependsOn": [
                "Compilar C (MinGW)",
                "Rodar programa"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila e depois executa automaticamente"
        }
    ]
}
